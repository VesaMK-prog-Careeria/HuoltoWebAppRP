@page
@model HuoltoWebApp.Pages.Muistutustyypit.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Luo uusi muistutustyyppi</h1>

<h4>Muistutustyyppi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Muistutustyyppi.MuistutustyyppiNimi" class="control-label"></label>
                <textarea asp-for="Muistutustyyppi.MuistutustyyppiNimi" class="form-control"></textarea>
                <span asp-validation-for="Muistutustyyppi.MuistutustyyppiNimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Edellinen sivu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

