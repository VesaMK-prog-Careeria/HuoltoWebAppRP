@page
@model HuoltoWebApp.Pages.Muistutustyypit.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-secondary" asp-page="Create">Luo uusi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Muistutustyyppi[0].MuistutustyyppiNimi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Muistutustyyppi) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MuistutustyyppiNimi)
            </td>
            <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.MuistutustyyppiId">Muokkaa</a> 
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.MuistutustyyppiId">Lisätiedot</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.MuistutustyyppiId">Poista</a>
            </td>
        </tr>
}
    </tbody>
</table>
