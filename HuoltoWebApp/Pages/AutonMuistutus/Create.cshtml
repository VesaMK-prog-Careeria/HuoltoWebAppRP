@page
@model HuoltoWebApp.Pages.AutonMuistutus.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Luo uusi autonhuollon muistutus</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AutoMuistutu.AutoId" class="control-label"></label>
                <select asp-for="AutoMuistutu.AutoId" class="form-control" asp-items="ViewBag.AutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AutoMuistutu.MuistutusPvm" class="control-label"></label>
                <input asp-for="AutoMuistutu.MuistutusPvm" class="form-control" />
                <span asp-validation-for="AutoMuistutu.MuistutusPvm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoMuistutu.Muistutustyyppi" class="control-label"></label>
                <textarea asp-for="AutoMuistutu.Muistutustyyppi" class="form-control"></textarea>
                <span asp-validation-for="AutoMuistutu.Muistutustyyppi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Luo uusi muistutus" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Edellinen sivu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
