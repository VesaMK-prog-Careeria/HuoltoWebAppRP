@page
@model HuoltoWebApp.Pages.AutonHuollot.EditModel

@{
    ViewData["Title"] = "Muokkaa huoltoja";
}

<h1>Muokkaa huoltoja</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AutoHuollot.HuollonId" />
            <div class="form-group">
                <label asp-for="AutoHuollot.AutoId" class="control-label"></label>
                <select asp-for="AutoHuollot.AutoId" class="form-control" asp-items="ViewBag.AutoId"></select>
                <span asp-validation-for="AutoHuollot.AutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoHuollot.HuoltoPvm" class="control-label"></label>
                <input asp-for="AutoHuollot.HuoltoPvm" class="form-control" />
                <span asp-validation-for="AutoHuollot.HuoltoPvm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoHuollot.HuoltopaikkaId" class="control-label"></label>
                <input asp-for="AutoHuollot.HuoltopaikkaId" class="form-control" />
                <span asp-validation-for="AutoHuollot.HuoltopaikkaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoHuollot.HuollonKuvaus" class="control-label"></label>
                <input asp-for="AutoHuollot.HuollonKuvaus" class="form-control" />
                <span asp-validation-for="AutoHuollot.HuollonKuvaus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoHuollot.Kuva" class="control-label"></label>
                <input asp-for="AutoHuollot.Kuva" class="form-control" />
                <span asp-validation-for="AutoHuollot.Kuva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tallenna" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Edellinen sivu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
