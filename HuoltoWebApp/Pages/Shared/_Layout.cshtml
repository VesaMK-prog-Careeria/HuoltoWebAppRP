@using Microsoft.AspNetCore.Identity
@using HuoltoWebApp.Areas.Identity.Data

@inject SignInManager<HuoltoWebAppUser> SignInManager
@inject UserManager<HuoltoWebAppUser> UserManager

<!DOCTYPE html>
<html lang="fi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - La-Sa HuoltoApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HuoltoWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.lasaapp.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ModalStyle.css" asp-append-version="true" />
    <script src="~/js/site.js" defer></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container d-flex justify-content-between align-items-center">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">La-Sa Huoltosovellus</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a href="/Etusivu" class="btn btn-primary">Alkuun</a>

                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto d-flex align-items-center">
                            <li class="nav-item d-flex align-items-center">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                        <button type="submit" class="btn btn-secondary">Kirjaudu ulos</button>
                                    </form>
                                }
                                else
                                {
                                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Kirjaudu sisään</a>
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer border-top text-muted mt-auto">
            <div class="container d-flex justify-content-center align-items-center">
                &copy; 2024 - HuoltoWebApp - @if (SignInManager.IsSignedIn(User))
                {
                    <a asp-area="" asp-page="/Privacy" class="custom-privacy-link">Yksityisyydensuoja</a>

                }
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

