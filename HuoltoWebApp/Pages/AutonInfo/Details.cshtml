@page "{id:int}/{handler?}"
@model HuoltoWebApp.Pages.AutonInfo.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AutoInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutoInfo.InfoTxt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutoInfo.InfoTxt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutoInfo.Auto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutoInfo.Auto.AutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutoInfo.Kuvat)
        </dt>
        <dd class="col-sm-10">
            @foreach (var kuva in Model.AutoInfo.Kuvat)
            {
                if (kuva.KuvaId != 0)
                {
                    <a href="#" data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-image-url="@Url.Page("/GetImage", new { id = kuva.KuvaId })">@kuva.KuvaNimi</a>
                }
            }
        </dd>
    </dl>
</div>

<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img id="modalImage" src="" alt="Kuva autosta" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.AutoInfo?.AutoInfoId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#imageModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget); // Button that triggered the modal
                var imageUrl = button.data('bs-image-url'); // Extract info from data-* attributes
                console.log("Ladattava kuva URL: " + imageUrl); // Tarkista, saadaanko oikea URL
                var modal = $(this);
                modal.find('#modalImage').attr('src', imageUrl);
            });
        });
    </script>
}