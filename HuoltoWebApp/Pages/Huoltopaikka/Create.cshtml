@page
@model HuoltoWebApp.Pages.Huoltopaikka.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Luo uusi huoltopaikka</h1>

<h4>Huoltopaikat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Huoltopaikat.Huoltopaikka" class="control-label"></label>
                <textarea asp-for="Huoltopaikat.Huoltopaikka" class="form-control"></textarea>
                <span asp-validation-for="Huoltopaikat.Huoltopaikka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Luo uusi huoltopaikka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Edellinen sivu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

