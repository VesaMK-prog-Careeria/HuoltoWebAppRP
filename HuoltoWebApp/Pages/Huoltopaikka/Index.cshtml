@page
@model HuoltoWebApp.Pages.Huoltopaikka.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-secondary" asp-page="Create">Luo uusi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Huoltopaikat[0].Huoltopaikka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Huoltopaikat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Huoltopaikka)
            </td>
            <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.HuoltoPaikkaId">Muokkaa</a> 
                    <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.HuoltoPaikkaId">Lisätiedot</a> 
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.HuoltoPaikkaId">Poista</a>
            </td>
        </tr>
}
    </tbody>
</table>
