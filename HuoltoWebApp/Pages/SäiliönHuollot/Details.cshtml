@page
@model HuoltoWebApp.Pages.SäiliönHuollot.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SäiliöHuollot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SäiliöHuollot.HuoltoPvm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SäiliöHuollot.HuoltoPvm)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SäiliöHuollot.HuoltoPaikkaId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SäiliöHuollot.HuoltoPaikkaId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SäiliöHuollot.HuollonKuvaus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SäiliöHuollot.HuollonKuvaus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SäiliöHuollot.Kuva)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SäiliöHuollot.Kuva)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SäiliöHuollot.Säiliö)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SäiliöHuollot.Säiliö.SäiliöId)
        </dd>
    </dl>
    @if (Model.Kuvat.Any())
    {
        <h4>Liitetyt kuvat</h4>
        <div class="row">
            @foreach (var kuva in Model.Kuvat)
            {
                var base64 = Convert.ToBase64String(kuva.KuvaData);
                var imageSrc = $"data:image/jpeg;base64,{base64}";
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="@imageSrc" class="card-img-top" alt="Kuva" />
                        <div class="card-body">
                            <p class="card-text">@kuva.KuvaNimi</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p><em>Ei liitettyjä kuvia.</em></p>
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.SäiliöHuollot?.HuoltoId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
