@page
@model HuoltoWebApp.Pages.Pvt.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Pv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!--Form on luotu käyttäen ASP.NET Coren tag-helppereitä
        Formiin on lisätty enctype="multipart/form-data" jotta voidaan lähettää tiedostoja -->
        <form method="post" enctype="multipart/form-data" id="autoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pv.RekNro" class="control-label"></label>
                <input asp-for="Pv.RekNro" class="form-control" />
                <span asp-validation-for="Pv.RekNro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pv.Katsastus" class="control-label"></label>
                <input asp-for="Pv.Katsastus" class="form-control" />
                <span asp-validation-for="Pv.Katsastus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pv.Adr" class="control-label"></label>
                <input asp-for="Pv.Adr" class="form-control" />
                <span asp-validation-for="Pv.Adr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pv.Välitarkastus" class="control-label"></label>
                <input asp-for="Pv.Välitarkastus" class="form-control" />
                <span asp-validation-for="Pv.Välitarkastus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pv.Määräaikaistarkastus" class="control-label"></label>
                <input asp-for="Pv.Määräaikaistarkastus" class="form-control" />
                <span asp-validation-for="Pv.Määräaikaistarkastus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pv.InfoTxt" class="control-label"></label>
                <textarea asp-for="Pv.InfoTxt" class="form-control"></textarea>
                <span asp-validation-for="Pv.InfoTxt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kuvatiedostot" class="control-label">Lataa kuvat</label>
                <input asp-for="Kuvatiedostot" type="file" multiple class="form-control" />
                <span asp-validation-for="Kuvatiedostot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="button" id="openModal" class="btn btn-primary">Avaa Kamera</button>
            </div>
            <div class="form-group">
                <!-- Lista otetuille kuville-->
                <ul id="capturedImagesList"></ul>
            </div>
            <div class="form-group">
                <input type="submit" value="Tallenna uusi PV" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!-- Modal -->
<div id="cameraModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <video autoplay="true" id="videoElement"></video>
        <canvas id="canvasElement" style="display:none;"></canvas>
        <button type="button" id="capture">Capture</button>
        <button type="button" id="saveImage">Save</button>
    </div>
</div>

<div>
    <a asp-page="Index">Edellinen sivu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
