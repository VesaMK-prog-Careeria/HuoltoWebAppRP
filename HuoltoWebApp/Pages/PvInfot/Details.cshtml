@page "{id:int}/{handler?}"
@model HuoltoWebApp.Pages.PvInfot.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>PvInfo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PvInfo.InfoTxt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PvInfo.InfoTxt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PvInfo.Pv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PvInfo.Pv.PvId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PvInfo.Kuvat)
        </dt>
        <dd class="col-sm-10">
            @foreach (var kuva in Model.PvInfo.Kuvat)
            {
                if (kuva.KuvaID != 0)
                {
                    <a href="#" data-bs-toggle="modal" data-bs-target="#imageModal" data-bs-image-url="@Url.Page("/GetImage", new { id = kuva.KuvaID })">@kuva.KuvaNimi</a>
                }
            }
        </dd>
    </dl>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img id="modalImage" src="" alt="Kuva autosta" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.PvInfo?.PvInfoId">Muokkaa</a> |
    <a asp-page="./Index">Back to List</a>
</div>
